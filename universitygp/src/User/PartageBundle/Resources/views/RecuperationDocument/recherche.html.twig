{% extends '::base.html.twig' %}

{% block body -%}
    

   <div style="width: 80%; margin-left: 10%;margin-top: 50px;" class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Moteur de recherche</h3>
  </div>
  <div class="panel-body">
    <form  class="form-inline" role="form" action="{{ path('document_recherche') }}" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="document" placeholder="Search">
          
 </div>
            <div class="col-lg-3"> 
            <select name="recherche" class="form-control">
                <option value="titre">Titre</option>
                <option value="usernamePartageur">Username Partageur</option>
                <option value="MotCle">mot Cle</option>
                
</select>
</div>
            <button class="btn btn-default" type="submit">Chercher</button>
        </form>
  </div>
</div>
{% if(entities==null)%}
<p class="alert alert-info">aucun résultat</p>
{%else%}
   <table class="table table-bordered table-striped table-condensed table-hover" style="width: 80%; margin-left: 10%;margin-top: 100px;">
         <thead>
            <tr>
                 <th>Titre</th>
                <th>Résumé</th>
                <th>Partagé le</th>
                <th>Modifié le</th>
                <th>Valide jusqu'à</th>
              <!--    <th>Expired</th>-->
                <!-- <th>Expiresat</th>-->
               <!--  <th>Nom</th>-->
              <!--   <th>Prenom</th>-->
                
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            
                
        {% for entity in entities %}
            <tr>
                <td>{{ entity.libelleDoc }}</td>
                <td>{{ entity.resumeDoc |raw }}</td>
                <td>{{ entity.datePartage|date('d-m-Y H:i:s') }} </td>
                <td>{%if (entity.dateMAJ==null)%}----------{%else%}{{ entity.dateMAJ|date('d-m-Y H:i:s') }}{%endif%}</td>
                <td>{{ entity.dateValidite|date('d-m-Y') }} </td>
                <td>
                <ul>

                   
<a class="btn btn-primary" href="{{ path('document_show', { 'id': entity.idDoc }) }}">Visualiser</a>
                   
<a class="btn btn-success" href="http://localhost{{asset(entity.UrlDoc)}}">Télécharger</a>
                        
                       
                   
                </ul>
                </td>
            </tr>
        {% endfor %}
            {%endif%}
        </tbody>
    </table>

    {% endblock %}
