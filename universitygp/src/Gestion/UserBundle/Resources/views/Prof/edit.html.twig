{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Prof edit</h1>

    <form style="width: 80%; margin-left: 10%;margin-top: 100px;"  class="form-horizontal" action="{{ path('prof_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
       
 <div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.username) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.username, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>
<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.email) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>

<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.plainPassword) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.plainPassword, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>

<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.roles) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.roles) }} </div>
        </div>
   <div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.nom) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.nom, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>
<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.prenom) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.prenom, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>
<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.tel) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.tel, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>
<div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.mobile) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.mobile, { 'attr': {'class': 'form-control'} }) }} </div>
        </div>

<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="checkbox">
        <label>
          {{ form_widget(edit_form.enabled, { 'attr': {'class': 'form-control'} }) }} Enabled
        </label>
        
      </div>
    </div>
  </div>
<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="checkbox">
     
        <label>
          {{ form_widget(edit_form.expired, { 'attr': {'class': 'form-control'} }) }} Expired
        </label>

      </div>
    </div>
  </div>
        
      <div class="form-group">
            <label class="col-lg-2 control-label" for="inputEmail">{{ form_label(edit_form.expiresAt) }}</label>
            <div class="col-lg-5"> {{ form_widget(edit_form.expiresAt) }} </div>
        </div>


 




  {{ form_rest(edit_form) }}

        <p>
            <button class="btn btn-success" type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
  
        <a class="btn btn-primary" href="{{ path('prof') }}">
            Back to the list
        </a>
    
        <form action="{{ path('prof_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
   
</ul>
{% endblock %}
