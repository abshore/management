{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cursus list</h1>

    <table class="table table-bordered table-striped table-condensed table-hover" style="width: 80%; margin-left: 10%;margin-top: 100px;">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Loisirs</th>
                <th>Presentation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('cursus_show', { 'id': entity.id }) }}">{{ entity.nomcv }}</a></td>
                <td>{{ entity.user.nom }}</td>
                <td>{{ entity.user.prenom }}</td>
                <td>{{ entity.loisirs }}</td>
                <td>{{ entity.presentation }}</td>
                <td>
                <ul>
                  
                        <a class="delet btn btn-danger" href="#" url="{{ path('cursus_show', { 'id': entity.id }) }}">Supprimer</a>
                    
                        <a class="edit btn btn-success" href="#" url="{{ path('cursus_edit', { 'id': entity.id }) }}">edit</a>
                   
                        <a class="btn btn-primary" href="{{ path('layout_cursus', { 'id': entity.id }) }}">Terminer</a>
                  
             
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

       <div id="Cv" style="display: none;"></div>


