{% extends '::base.html.twig' %}

{% block body -%}
    

    <form action="{{ path('profilclasse_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
<div class="form-group">        
{{ form_row(edit_form.code) }}  
        {{ form_row(edit_form.libelle) }}
    </div>  
        <div class="form-group">
            <table class="table table-bordered">
    {% for panier in edit_form.paniers %}
                    {% set cmp = loop.index %}
        
        <tr>
            <td>{{ form_row(panier) }}</td>
            <td><ul>
    {% for m in paniers[cmp-1].matieres %}                
                            <li>{{m}}</li>
               {% endfor %}
            </ul></td>
        </tr>
    {% endfor %}
            </table>
            </div>
        {{ form_rest(edit_form) }}
        <div class="panel-footer" style="text-align: right">
            <button class="btn btn-success btn-mini" type="submit">Modifier</button>
        </div>
    </form>

        
{% endblock %}
