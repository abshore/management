<form class="form-horizontal" action="{{ path('affectationetudiant_create') }}" method="post" {{ form_enctype(form) }}>
    <div class="panel-body">
        <div class="form-group">        
            {{ form_widget(form) }}
            </div>
        </div>
        <div class="panel-footer" style="text-align: right">
            <p>
                <input type="button" id="btn" class="btn btn-info btn-xs" value="Ajouter"/>
            </p></div>
    </form>



    <script type="text/javascript">
        $('#gestion_emploisbundle_affectationetudianttype_classe').change(function() {
            var classe = $(this).val();
            $.post("{{ path('affectationplan_getmatiere') }}", {
                classe: classe
            }, function(data) {

                $('#gestion_emploisbundle_affectationetudianttype_groupe').empty();
                $('#gestion_emploisbundle_affectationetudianttype_groupe').append(data.groupes);
            },
                    "json"
                    );
        });

        $('#btn').click(function() {

            var classe = $('#gestion_emploisbundle_affectationetudianttype_classe').val();
            var groupe = $('#gestion_emploisbundle_affectationetudianttype_groupe').val();
            var etudiants = $('#gestion_emploisbundle_affectationetudianttype_etudiants').val();
            //alert(chapitres);
            $.post("{{ path('affectationetudiant_ajouterAffectation') }}", {
                classe: classe,
                groupe: groupe,
                etudiants: etudiants
            }, function(data) {
                alert(data.msg);
                $('#Affectation').dialog('close');
                self.location.reload();
            },
                    "json"
                    );

        });
        </script>