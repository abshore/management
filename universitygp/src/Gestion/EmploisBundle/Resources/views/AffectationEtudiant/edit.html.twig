            var classe = $('#gestion_emploisbundle_affectationetudianttype_classe').val();
            var groupe = $('#gestion_emploisbundle_affectationetudianttype_groupe').val();
            var etudiants = $('#gestion_emploisbundle_affectationetudianttype_etudiants').val();
            //alert(chapitres);
            $.post("{{ path('affectationetudiant_modifierAffectation', { 'id': entity.id }) }}", {
                classe: classe,
                groupe: groupe,
                etudiants: etudiants
            }, function(data) {
                alert(data.msg);
                $('#Affectation').dialog('close');
                self.location.reload();
            },
                    "json"
                    );

        });
