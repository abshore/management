<script type="text/javascript">
    $(document).ready(function() {

        $.get("{{ path('affectationetudiant_getgroupemodif', { 'id': entity.id }) }}",
                function(data) {
                    $('#gestion_emploisbundle_affectationetudianttype_groupe').empty();
