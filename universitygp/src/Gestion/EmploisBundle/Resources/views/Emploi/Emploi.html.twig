<link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
<link href="{{ asset('css/jquery-ui.css') }}" rel="stylesheet" type="text/css" />
<script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript"></script>

<form class="form-inline" id="form" method="POST" action="{{ path('emploi_emploiClasse') }}">
    <div class="panel panel-default">
        <div class="panel-heading">
            <table style="width: 100%">
                <tr>
                    <td>
                        <div class="form-group">
                            <select id="classes" name="classe" url="{{ path('emploi_emploiClasse') }}" class="form-control">
                                <option id=""></option>
                                {% for classe in classes %}
                                <option value="{{classe.id}}">{{classe.code}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="groupe" class="form-control">
                                <option value=""></option>
                            </select>
                        </div>
                    </td>
                    <td style="text-align: right">
                        <div class="form-group">
                            <a class="" href="{{ path('emploi') }}">
                                <i class="glyphicon glyphicon-circle-arrow-left">retour</i>
                            </a>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    {#<button type="submit">envoyer</button>#}
</form>

{#<iframe id="iframe" onload="emploi();" style="width: 100%; height: 500px;" frameborder="no"></iframe>#}
<div id="emploi" style="display: none"></div>

<script src="{{ asset('js/jquery-1.9.1.js')}}"></script>
<script src="{{ asset('js/jquery-ui.js') }}"></script>
<script type="text/javascript">

    $('#classes').change(function() {
        var classe = $(this).val();
        $.post("{{ path('emploi_getmatiere') }}",
                {classe: classe
                }, function(data) {
            $('#groupe').empty();
            $('#groupe').append(data.groupes);
        },
                "json");

    });

    $('#groupe').change(function() {
        var classe = $('#classes').val();
        var groupe = $(this).val();
        $.post("{{ path('emploi_emploiClasse') }}", {
            classe: classe,
            groupe: groupe
        }, function(data) {
            $('#emploi').empty();
            $('#emploi').show();
            $('#emploi').append(data.groupe);
        }, "json");
    });




    </script>